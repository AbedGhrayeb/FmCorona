@model IEnumerable<Application.Articals.ArticalDto>

@{
    ViewData["Title"] = "Articlas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Articlas List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New Articla</a>
</p>
<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr class="text=center">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.CreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreateAt)
            </td>
            <td>
                <img asp-append-version="true" alt="artical image" class="img-thumbnail" width="70" height="70"
                     src="@item.ImgUrl" style="padding:5px;" />
            </td>
            <td>
                <form method="post" asp-action="Delete">
                    <input type="hidden" asp-for="@item.Id"/>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"
                            onclick="return confirm('Are you sure you want to delete this artical?');">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
</div>