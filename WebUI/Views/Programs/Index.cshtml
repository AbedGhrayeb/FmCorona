@model IEnumerable<Application.Programs.ProgramDto>

@{
    ViewData["Title"] = "Programs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Programs</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New Program</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Presenter)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Presenter)
            </td>
            <td>
                <img asp-append-version="true" alt="program image" src="@item.ImgUrl" width="50" height="50" class="img-thumbnail" />
            </td>

            <td>
           
                <form method="post" asp-action="Delete">
                    <input type="hidden" asp-for="@item.Id" />
                    <a asp-action="Index" asp-controller="Episodes" asp-route-id="@item.Id" class="btn btn-secondary">Episodes</a> |
                    <a asp-action="Program" asp-controller="Schedule" asp-route-id="@item.Id" class="btn btn-success">Show Times</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"
                            onclick="return confirm('Are you sure you want to delete this program?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
