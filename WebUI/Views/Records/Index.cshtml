@model IEnumerable<Domain.Entities.Record>

@{
    ViewData["Title"] = "Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Records List</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                User Recored
            </th> 
            <th>
               User
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <audio controls>
                        <source src="@item.RecordUrl">
                    </audio>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.UserName)
            </td>
            <td>
                <form method="post" asp-action="Delete">
                    <input type="hidden" asp-for="@item.Id" />
                    <button type="submit" asp-action="Delete" asp-route-id="@item.Id"
                            class="btn btn-danger" onclick="return confirm('Are you sure you went to delete this item')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
