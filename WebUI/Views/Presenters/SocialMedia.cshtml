@model Application.Presenters.AddSocialMediaVm

@{
    ViewData["Title"] = "SocialMedia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SocialMedia</h1>

<h4>SocialMedia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SocialMedia" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PresenterId" />

                <label asp-for="Provider" class="control-label"></label>
                <input asp-for="Provider" class="form-control" />
                <span asp-validation-for="Provider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ImgUrl" class="col-sm-2 col-form-label">Icon</label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input multiple asp-for="ImgUrl" type="file" accept="image/*" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose Icon...</label>
                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

