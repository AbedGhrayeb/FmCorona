@model Domain.Entities.ShowTime

@{
    ViewData["Title"] = "Edit ShowTime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>ShowTime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProgramId" />

            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label">Day Of Week</label>
                <select asp-for="DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()" class="form-control"></select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstShowTime" class="control-label">Show Time</label>
                <input asp-for="FirstShowTime" class="form-control" />
                <span asp-validation-for="FirstShowTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
