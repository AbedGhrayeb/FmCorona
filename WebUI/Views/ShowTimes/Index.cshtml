@model IEnumerable<Application.Programs.ProgramShowTimesVm>

@{
    ViewData["Title"] = "ShowTimes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowTimes</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.ProgramId" class="btn btn-primary">Add Show Time</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Day Of Week
            </th>
            <th>
               Show Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstShowTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
