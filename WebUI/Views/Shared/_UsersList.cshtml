@model WebUI.Helpers.PaginatedList<Domain.Entities.AppUser>

@foreach (var user in Model)
{
    <div class="card mt-3">
        <div class="card-header">
            User Name: @user.UserName
        </div>
        <div class="card-body">
            <h5 class="card-title">Name: <span class="text-info">@user.FullName</span></h5>
            <h5 class="card-title">Email: <span class="text-success">@user.Email</span></h5>
            <h5 class="card-title">Phone: <span class="text-success">@user.PhoneNumber</span></h5>
        </div>
        <div class="card-footer">
            <form method="post" asp-action="Delete">
                <button type="submit" asp-action="Delete" asp-route-userId="@user.Id"
                        onclick="return confirm('Are you sure you want to delete this user?');" class="btn btn-danger">
                    Delete
                </button>
            </form>
        </div>
    </div>
}